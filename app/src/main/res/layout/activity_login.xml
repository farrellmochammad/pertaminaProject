<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.farrell.testappliaction.loginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/ruluko"
        android:text="MyRetail"
        android:textColor="#D50000"
        android:textSize="36dp" />

    <EditText
        android:id="@+id/usernametext"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/my_stroke"
        android:ems="10"
        android:fontFamily="@font/ruluko"
        android:inputType="textPersonName"
        android:textColor="#BDBDBD"
        tools:text="  Username" />

    <EditText

        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/usernametext"
        android:layout_alignStart="@+id/usernametext"
        android:layout_centerVertical="true"
        android:background="@drawable/my_stroke"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:fontFamily="@font/ruluko"
        android:id="@+id/buttonLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/corner_radius"
        android:text="Login"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/buttonLoginfb"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/buttonLogin"
        android:layout_alignStart="@+id/buttonLogin"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="12dp"
        android:background="@drawable/corner_radius_fb"
        android:fontFamily="@font/ruluko"
        android:text="Login With Facebook"
        android:textColor="#FFFFFF" />

    <TextView
        android:fontFamily="@font/ruluko"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="OR" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLoginfb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ruluko"
        android:text="Don't have account ?" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ruluko"
        android:text="Signup MyRetail"
        android:textColor="#D50000" />


</RelativeLayout>
